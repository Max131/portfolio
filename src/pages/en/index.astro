---
import Layout from "@layouts/Default.astro";
import { defaultLang as defaultLocale, site, contactItems } from "@i18n/ui.ts";
import { useTranslation } from "@i18n/utils.ts";
import Projects from "@components/sections/Projects.astro";

const currentLocale = Astro.currentLocale || defaultLocale;
const t = useTranslation(currentLocale);
---

<Layout title={t("user.role")}>
	<section class="mb-12" id="hero">
		<div class="bg-neutral-800">
			<div class="max-w-5xl mx-auto px-4 py-6 lg:px-0">
				<div class="flex justify-between items-center gap-4">
					<h1 class="font-title font-bold">
						<span class="text-3xl text-yellow-400">
							{site.user}<br />
						</span>
						<span class="text-4xl text-cyan-400">
							{t("user.role")}
						</span>
					</h1>
					<div class="text-white font-bold min-w-fit">
						<a class="text-amber-400 opacity-50 hover:opacity-100" class:list={[{"opacity-100 pointer-events-none": currentLocale === defaultLocale}]} href="/">Es</a> | 
						<a class="text-cyan-400 opacity-50 hover:opacity-100" class:list={[{"opacity-100 pointer-events-none": currentLocale !== defaultLocale}]} href="/en">En</a>
					</div>
				</div>
			</div>
		</div>
		<div class="max-w-5xl mx-auto p-4 lg:px-0">
			<div class="text-lg italic" set:html={t("hero.content")} />
		</div>
	</section>

	<div class="max-w-5xl mx-auto p-4 lg:px-0">
		<Projects />

		<section class="mb-12" id="about">
			<h2 class="font-title font-bold mb-1 text-2xl">{t("about.title")}</h2>
			<div class="text-lg *:[p]:mb-4" set:html={t("about.content")} />
		</section>

		<section id="contact" class="mb-12">
			<h2 class="font-title font-bold mb-1 text-2xl">{t("contact.title")}</h2>
			<div class="text-lg *:[p]:mb-4" set:html={t("contact.content")} />
			<ul class="mt-4 space-y-2">
				{
					contactItems.map((item) => (
						<li>
							<a
								class="inline-flex gap-1 items-base text-blue-600"
								href={item.link}
								target="_blank"
								rel="noopener noreferrer"
							>
								<span>
									<item.icon />
								</span>
								<span class="font-medium text-xl">{item.name}</span>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</div>
</Layout>
